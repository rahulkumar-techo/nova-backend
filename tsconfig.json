{
  "compilerOptions": {
    // Target JavaScript version
    "target": "ES2020",

    // Module system: CommonJS works best with ts-node and Node.js
    "module": "commonjs",

    // Include ES2020 built-ins (like Promise, Map, etc.)
    "lib": ["ES2020"],

    // Root folder of your source files
    "rootDir": "src",

    // Output folder for compiled JS
    "outDir": "dist",

    // Enable strict type-checking
    "strict": true,

    // How modules are resolved
    "moduleResolution": "node",

    // Allow default imports from CommonJS modules
    "esModuleInterop": true,

    // Skip type checking for all declaration files (*.d.ts)
    "skipLibCheck": true,

    // Allow importing JSON files
    "resolveJsonModule": true,

    // Locations of type definitions
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // Base directory for non-relative module imports
    "baseUrl": ".",

    // Path aliases
    "paths": {
      "@/*": ["src/*"] // Use @/... to reference src/*
    }
  },

  // Include all TS files under src
  "include": ["src/**/*"],

  // Exclude these directories from compilation
  "exclude": ["node_modules", "dist"]
}
