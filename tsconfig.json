{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",   // project root
    "paths": {
      "@/*": ["src/*"]   // now "@/utils/logger" maps to "src/utils/logger"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
